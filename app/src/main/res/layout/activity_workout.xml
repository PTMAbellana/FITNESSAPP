<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".WorkoutActivity">

    <ImageButton
        android:id="@+id/btnUpdateProfile"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="48dp"
        android:background="#00FFFFFF"
        android:contentDescription="Update Profile"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/editprof" />

    <TextView
        android:id="@+id/tvProgressTracking"
        android:layout_width="137dp"
        android:layout_height="29dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="173dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Workout"
        android:textColor="#896CFE"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnUpdateProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVideo3"
        android:layout_width="323dp"
        android:layout_height="110dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVideo2"
        app:srcCompat="@drawable/video3" />

    <ImageView
        android:id="@+id/imgVideo4"
        android:layout_width="323dp"
        android:layout_height="110dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVideo3"
        app:srcCompat="@drawable/video4" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="323dp"
        android:layout_height="85dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdateProfile">

        <Button
            android:id="@+id/beginnerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="Beginner"
            android:textSize="13sp" />

        <Button
            android:id="@+id/intermediateBtn"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="Intermediate"
            android:textSize="13sp" />

        <Button
            android:id="@+id/advancedBtn"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="Advanced"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVideo1"
        android:layout_width="323dp"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:srcCompat="@drawable/video1" />

    <ImageView
        android:id="@+id/imgVideo2"
        android:layout_width="323dp"
        android:layout_height="110dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVideo1"
        app:srcCompat="@drawable/video2" />

    <ImageButton
        android:id="@+id/btnvideo1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="46dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Play Video 1"
        app:layout_constraintBottom_toBottomOf="@+id/imgVideo1"
        app:layout_constraintEnd_toEndOf="@+id/imgVideo1"
        app:layout_constraintStart_toStartOf="@+id/imgVideo1"
        app:layout_constraintTop_toTopOf="@+id/imgVideo1"
        app:srcCompat="@drawable/playbtn" />

    <ImageButton
        android:id="@+id/btnVideo4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Play Video 4"
        app:layout_constraintBottom_toBottomOf="@+id/imgVideo4"
        app:layout_constraintEnd_toEndOf="@+id/imgVideo4"
        app:layout_constraintStart_toStartOf="@+id/imgVideo4"
        app:layout_constraintTop_toTopOf="@+id/imgVideo4"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/playbtn" />

    <ImageButton
        android:id="@+id/btnVideo3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="47dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Play Video 3"
        app:layout_constraintBottom_toBottomOf="@+id/imgVideo3"
        app:layout_constraintEnd_toEndOf="@+id/imgVideo3"
        app:layout_constraintStart_toStartOf="@+id/imgVideo3"
        app:layout_constraintTop_toTopOf="@+id/imgVideo3"
        app:srcCompat="@drawable/playbtn" />

    <ImageButton
        android:id="@+id/btnVideo2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="241dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Play Video 2"
        app:layout_constraintBottom_toBottomOf="@+id/imgVideo2"
        app:layout_constraintEnd_toEndOf="@+id/imgVideo2"
        app:layout_constraintStart_toStartOf="@+id/imgVideo2"
        app:layout_constraintTop_toTopOf="@+id/imgVideo2"
        app:srcCompat="@drawable/playbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
