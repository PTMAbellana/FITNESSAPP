<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".HomeView">

    <TextView
        android:id="@+id/tvChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_light"
        android:text="It's time to challenge your limits."
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProgressTracking" />

    <TextView
        android:id="@+id/tvProgressTracking"
        android:layout_width="137dp"
        android:layout_height="29dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="173dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hi, "
        android:textColor="#896CFE"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnUpdateProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnUpdateProfile"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Update Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/editprof" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Recommendations"
        android:textColor="#E1F063"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnSeeAllVideos"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="7dp"
        android:background="#00FFFFFF"
        android:text="See All"
        app:layout_constraintBottom_toTopOf="@+id/btnWorkoutVideo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="244dp"
        android:layout_height="65dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnSeeAllVideos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChallenge">

        <ImageButton
            android:id="@+id/btnWorkout"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:contentDescription="Workout"
            app:srcCompat="@drawable/workoutbtn" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" | \n|\n|"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnProgressTracking"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:contentDescription="Progress Tracking"
            app:srcCompat="@drawable/progressbtn" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="58dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" | \n|\n|"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnNutrition"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:contentDescription="Nutrition"
            app:srcCompat="@drawable/nutritionbtn" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnWorkoutVideo1"
        android:layout_width="157dp"
        android:layout_height="138dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Workout Video 1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/recoimg1" />

    <ImageButton
        android:id="@+id/btnWorkoutVideo2"
        android:layout_width="157dp"
        android:layout_height="138dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:text=" "
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:contentDescription="Workout Video 2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnWorkoutVideo1"
        app:layout_constraintTop_toBottomOf="@+id/btnSeeAllVideos"
        app:srcCompat="@drawable/recoim2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="341dp"
        android:layout_height="79dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/dayslayout_radius"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWorkoutVideo1">

        <TextView
            android:id="@+id/lblDay1"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Day 1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnStartDay1"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#232323"
            android:fontFamily="@font/poppins_semibold"
            android:text="Start"
            app:iconTint="#232323"
            app:strokeColor="#F8F8F8"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="341dp"
        android:layout_height="79dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/daysinactivelayout_radius"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/lblDay2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Day 2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnStartDay2"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#232323"
            android:fontFamily="@font/poppins_semibold"
            android:text="Start"
            app:iconTint="#232323"
            app:strokeColor="#F8F8F8"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="79dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/daysinactivelayout_radius"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/lblDay3"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Day 3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnStartDay3"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#232323"
            android:fontFamily="@font/poppins_semibold"
            android:text="Start" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
