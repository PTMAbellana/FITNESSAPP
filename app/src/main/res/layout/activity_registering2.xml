<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".registering.Registering2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/splashimg2" />

        <TextView
            android:id="@+id/tvStartJourneyGreetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Hello, name! \nWelcome to the journey \nto your dream body"
            android:textAlignment="viewStart"
            android:textColor="#E2F163"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvWelcome4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_light"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Here comes a few simple questions before we can personalize your daily goal and schedule"
            android:textAlignment="textStart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnstart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorPurple"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="onStartPersonalizationClicked"
            android:text="Start"
            android:textColor="@color/colorDarkPurple" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>