<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videoexercise.VideoWorkoutActivity3">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        tools:context=".videoexercise.VideoWorkoutFragment"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView9"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="500dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Creator: 5-Minute Fitness"
            android:textColor="#DAA251"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/tvChallenge2"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="525dp"
            android:fontFamily="@font/poppins_light"
            android:text="Engaging in a 5-minute legs workout can offer numerous benefits, enhancing both physical health and overall well-being. Despite its brief duration, such a workout can effectively strengthen key muscle groups in the lower body, including the quadriceps, hamstrings, glutes, and calves."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGreeting" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="475dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="5 MINUTE LEGS WORKOUT "
            android:textColor="#E1F063"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/tvGreeting3"
            android:layout_width="158dp"
            android:layout_height="29dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Legs"
            android:textAlignment="center"
            android:textColor="#896CFE"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBack4"
            android:layout_width="92dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#00E2F163"
            android:onClick="onBackClicked"
            android:text="Back"
            android:textColor="#E2F163"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <VideoView
            android:id="@+id/videoView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="120dp" />

        <LinearLayout
            android:id="@+id/media_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/videoSeekBar"
                android:layout_width="324dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:max="100" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/media_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnWorkoutBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:text="Back 5s" />

            <Button
                android:id="@+id/btnPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play" />

            <Button
                android:id="@+id/btnForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:text="Forward 5s " />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>